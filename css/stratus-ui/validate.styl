@import "./mixins"

.field
  position relative
  
  // The field-specific error messages.
  ul.errors
    list-style none
    left 6px
    position absolute
    z-index 10
    
    // An error message
    li
      background #999
      border-bottom 1px solid rgba(black, 0.3)
      border-radius bottom 10px
      box-shadow 0px 1px 1px rgba(black, 0.4)
      color white
      display inline-block
      font-size 80%
      margin-bottom 2px
      margin-left 12px
      padding 2px 8px
      text-shadow 0px -1px 0px rgba(black, 0.3)

.field > .icon
  top 50%
  transform translateY(-50%)

.field.success > .icon
  absolute right 16px
  background-image url("/images/icons/check.png")
  content ' '
  height 16px
  width 16px

.field.failure > .icon
  absolute right 18px
  background-image url("/images/icons/x.png")
  content ' '
  height 11px
  opacity 0.75
  width 11px

.field.loading > .icon
  absolute right 16px
  background-image url("/images/icons/loading.gif")
  content ' '
  height 16px
  width 16px
