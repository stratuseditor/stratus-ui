@import './mixins'

.tabs
  .tab-contents > section
    display none
  
  .tab-contents > section.current
    display block

.tabs-block
  > nav
    border-bottom 1px solid #e0e0e0
    height 34px
    
    > ul
      height 33px
    
    // Tab handles.
    li
      background linear-gradient(top, #eee, #e4e4e4)
      border-bottom 1px solid #dadada
      border-right 1px solid #ccc
      box-shadow inset 0px 0px 2px rgba(black, 0.1)
      color #333
      cursor pointer
      display inline-block
      float left
      font-weight bold
      margin-bottom -1px
      padding 8px 28px
      position relative
      text-shadow 0px 1px 0px white
      user-select none
      &.current
        background #f8f8f9
        border-bottom-color #f8f8f9
        box-shadow none
        cursor default
      
      &:not(.current):hover
        background linear-gradient(top, #f1f1f1, #e7e7e7)
        box-shadow inset 1px 0px 1px rgba(black, 0.1)
  
  .tab-contents
    background linear-gradient(top, #f8f8f9, #fafafb)
    border-bottom 1px solid #e0e0e0
    position relative
